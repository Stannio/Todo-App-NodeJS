<div class="row">
    <div class="col s12 l6">
        <h4>Todo's</h4>
        <div id="todo-list-wrapper">

        </div>
    </div>
    <div class="col s12 l6">
        <form action="">
            <div class="row">
                <h3>Add Todo</h3>
                <div class="input-field col s12">
                    <input type="text" name="title" id="title">
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Description</label>
                </div>
            </div>
            <div class="row">
                <h4>Priority</h4>
                <p>
                    <input type="radio" id="high" name="priority" />
                    <label for="high">High</label>
                </p>
                <p>
                    <input type="radio" id="medium" name="priority" />
                    <label for="medium">Medium</label>
                </p>
                <p>
                    <input type="radio" id="low" name="priority" />
                    <label for="low">Low</label>
                </p>
            </div>
            <div class="row">
                <div class="col s12">
                    <a href="#" class="btn blue-grey lighten-2 waves-light waves-effect" id="submit">Add</a>
                </div>
            </div>
        </form>
    </div>
</div>
